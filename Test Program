13. Palindrome Number

public class PalindromeNumber {
	public static void main(String[] args) {
		int input=121;
		int original=input;
		int rev=0;
		while(input>0) {
		rev=rev*10+input%10;
		input=input/10;	
		}
		if(rev==original) {
			System.out.println("palindrome");
		}
		else {
			System.out.println("not palindrome");
		}
	}
}
