10. Swap two number without temp

public class SwapWithoutTemp {

	public static void main(String[] args) {
		int a=5,b=3;
		System.out.println("Before swap: a is "+a+" b is "+b);
        a = a+b;
        b=a-b;
        a=a-b;
        System.out.println("after swap: a is "+a+" b is "+b);
	}

}
